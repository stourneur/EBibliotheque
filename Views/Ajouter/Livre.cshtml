@model EBibliotheque.ViewModels.AjouterViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Ajouter un Livre</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Livre.Titre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Livre.Titre, new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.Livre.Titre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(expression: model => model.Livre.DateParution, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Livre.DateParution, new {type = "date" , @class = "form-control"})
                @Html.ValidationMessageFor(model => model.Livre.DateParution, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Livre.Auteur.Nom, htmlAttributes: new { @class = "control-label col-md-2", @for = "Auteurs" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Auteurs, new SelectList(Model.Auteurs, "Id", "Nom"),  new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}


